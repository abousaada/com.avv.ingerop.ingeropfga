<core:FragmentDefinition xmlns="sap.m"
                        xmlns:core="sap.ui.core"
                        xmlns:layout="sap.ui.layout"
                        xmlns:semantic="sap.f.semantic">

    <Table id="opportTable" inset="false" items="{utilities>/opport}">
        <columns>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column>
                <Text text="Valeur"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{utilities>description}" 
                          />
                    <Text text="{utilities>valueOpport}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
